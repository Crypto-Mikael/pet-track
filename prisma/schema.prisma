generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id      Int     @id @default(autoincrement())
  name    String
  address String
  phone   String?
  email   String?

  @@map(name: "stores")
}

model User {
  id        Int      @id @default(autoincrement())
  clerkId   String   @unique
  name      String
  cpf       String?
  phone     String?
  email     String
  createdAt DateTime @default(now())
  updatedAt DateTime
  Pet       Animal[]

  @@map(name: "users")
}

model Animal {
  id           Int           @id @default(autoincrement())
  name         String
  details      String?
  breed        String
  imageUrl     String?
  age          DateTime
  owner_id     Int
  owner        User          @relation(fields: [owner_id], references: [id])
  vaccinations Vaccination[]
  baths        Bath[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime

  @@map(name: "animal")
}

model Vaccination {
  id           Int      @id @default(autoincrement())
  pet_id       Int
  vaccine_name String
  animal       Animal   @relation(fields: [pet_id], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime

  @@map(name: "vaccinations")
}

model Bath {
  id        Int      @id @default(autoincrement())
  pet_id    Int
  animal    Animal   @relation(fields: [pet_id], references: [id])
  date      DateTime
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@map(name: "baths")
}
