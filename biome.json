{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf",
    "ignore": ["node_modules", ".next", "dist", "build"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useNamingConvention": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "warn"
      }
    },
    "ignore": ["node_modules", ".next", "dist", "build"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "arrowParentheses": "always",
      "trailingCommas": "all"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    },
    "parser": {
      "allowTrailingCommas": false
    }
  },
  "overrides": [
    {
      "include": ["**/*.json"],
      "formatter": {
        "indentWidth": 2
      }
    }
  ]
}
